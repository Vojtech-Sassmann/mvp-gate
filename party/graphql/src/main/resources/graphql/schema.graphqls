type Query {
    idps(
        """
        Number of elements to return.
        """
        size: Int!
        """
        Page number.
        """
        page: Int!
        """
        Order of search elements.
        """
        orderBy: IdpOrder
    ): IdpConnection!
}

type Mutation {
    createIdp(createIdpInput: CreateIdpInput): Idp!
}

enum OrderDirection {
    ASC
    DESC
}
